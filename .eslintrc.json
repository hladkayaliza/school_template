{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "func-names": ["off"],
        "max-classes-per-file": ["error", 2],
        "import/prefer-default-export": "off",
        "import/no-unresolved": [
            2,
            { "caseSensitive": false }
        ]
    }
}
